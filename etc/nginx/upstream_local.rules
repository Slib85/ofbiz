upstream adminfarm {
    zone adminfarm 64k;
    server 127.0.0.1:8080 route=jvm1 max_fails=2 fail_timeout=60 slow_start=30s;
    sticky route $route_cookie $route_uri;
}
upstream adminfarmSecure {
    zone adminfarmSecure 64k;
    server 127.0.0.1:8443 route=jvm1 max_fails=2 fail_timeout=60 slow_start=30s;
    sticky route $route_cookie $route_uri;
}

