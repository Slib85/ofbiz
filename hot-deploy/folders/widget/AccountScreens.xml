                <set field="titleProperty" value="My Account"/>
                <script location="component://folders/webapp/folders/WEB-INF/actions/account/account.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
                            <html><html-template location="component://folders/webapp/folders/account/account-redesign.ftl"/></html>
                        </platform-specific>
