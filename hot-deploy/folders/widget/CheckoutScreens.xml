	<screen name="checkout-decorator">
		<section>
			<actions>
				<!-- base/top/specific map first, then more common map added for shared labels -->
				<script location="component://envelopes/widget/ecommerce.setup.groovy"/>
			</actions>
			<widgets>
				<platform-specific><html><html-template location="component://folders/webapp/folders/template/open.ftl"/></html></platform-specific>
				<platform-specific><html><html-template location="component://folders/webapp/folders/template/checkoutHeader.ftl"/></html></platform-specific>
				<decorator-section-include name="body"/>
				<platform-specific><html><html-template location="component://folders/webapp/folders/template/checkoutFooter.ftl"/></html></platform-specific>
				<platform-specific><html><html-template location="component://folders/webapp/folders/template/close.ftl"/></html></platform-specific>
			</widgets>
		</section>
	</screen>
	<screen name="payByAmazonButton">
		<section>
			<actions>
				<set field="pageType" value="amazonmws"/>
			</actions>
			<widgets>
				<platform-specific><html><html-template location="component://folders/webapp/folders/checkout/payByAmazonButton.ftl"/></html></platform-specific>
			</widgets>
		</section>
	</screen>

	<screen name="cart">
