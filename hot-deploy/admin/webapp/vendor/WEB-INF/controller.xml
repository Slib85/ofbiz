<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://ofbiz.apache.org/Site-Conf" xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>
    <description>Envelopes Controller Configuration File</description>
    <errorpage>/error/error.jsp</errorpage>

    <handler name="java" type="request" class="org.apache.ofbiz.webapp.event.JavaEventHandler"/>
    <handler name="groovy" type="request" class="org.apache.ofbiz.webapp.event.GroovyEventHandler"/>
    <handler name="soap" type="request" class="org.apache.ofbiz.webapp.event.SOAPEventHandler"/>
    <handler name="service" type="request" class="org.apache.ofbiz.webapp.event.ServiceEventHandler"/>
    <handler name="service-multi" type="request" class="org.apache.ofbiz.webapp.event.ServiceMultiEventHandler"/>
    <handler name="simple" type="request" class="org.apache.ofbiz.webapp.event.SimpleEventHandler"/>
    <handler name="rome" type="request" class="org.apache.ofbiz.webapp.event.RomeEventHandler"/>

    <handler name="jsp" type="view" class="org.apache.ofbiz.webapp.view.JspViewHandler"/>
    <handler name="http" type="view" class="org.apache.ofbiz.webapp.view.HttpViewHandler"/>
    <handler name="screen" type="view" class="org.apache.ofbiz.widget.renderer.macro.MacroScreenViewHandler"/>
    <handler name="simplecontent" type="view" class="org.apache.ofbiz.content.view.SimpleContentViewHandler"/>
    <handler name="screenfop" type="view" class="org.apache.ofbiz.widget.renderer.fo.ScreenFopViewHandler"/>

    <!-- General Request Mappings -->
    <request-map uri="blank">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="blank"/>
        <response name="error" type="view" value="blank"/>
    </request-map>
    <request-map uri="main">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="vendorOrderList"/>
        <response name="error" type="view" value="vendorOrderList"/>
    </request-map>

    <!-- Check if user is logged in -->
    <request-map uri="isUserLoggedIn">
        <security https="true" auth="false"/>
        <event type="java" path="com.envelopes.login.EnvLoginEvents" invoke="isUserLoggedIn"/>
        <response name="success" type="none" />
        <response name="error" type="none" />
    </request-map>

    <!-- Order Pages -->
    <request-map uri="vendorOrderList">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="vendorOrderList"/>
        <response name="error" type="view" value="vendorOrderList"/>
    </request-map>
    <request-map uri="addVendorTracking">
        <security https="true" auth="true"/>
        <event type="java" path="com.envelopes.cxml.CXMLEvents" invoke="addVendorTracking"/>
        <response name="success" type="none" />
        <response name="error" type="none" />
    </request-map>
    <request-map uri="processSwitchProof">
        <security https="true" auth="true"/>
        <event type="java" path="com.envelopes.order.OrderEvents" invoke="processSwitchProof"/>
        <response name="success" type="none" />
        <response name="error" type="none" />
    </request-map>
    <request-map uri="generatePurchaseOrderPDF">
        <security https="true" auth="true"/>
        <event type="java" path="com.envelopes.order.OrderEvents" invoke="generatePurchaseOrderPDF"/>
        <response name="success" type="none" />
        <response name="error" type="none" />
    </request-map>
    <request-map uri="serveFileForStream">
        <security https="true" auth="true"/>
        <event type="java" path="com.envelopes.http.FileHelper" invoke="serveFileForStream"/>
        <response name="success" type="none" />
        <response name="error" type="none" />
    </request-map>

    <!-- View Mappings -->
    <view-map name="error" page="/error/error.jsp"/>
    <view-map name="blank" type="screen" page="component://admin/widget/CommonScreens.xml#blank"/>
    <view-map name="vendorOrderList" type="screen" page="component://admin/widget/OrderScreens.xml#vendorOrderList"/>
</site-conf>
