<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
	<description>Envelopes.com Services</description>
	<vendor>Envelopes.com</vendor>
	<version>1.0</version>

	<service name="getScene7DOMFXGs" engine="java" max-retry="0" transaction-timeout="600" auth="false" location="com.envelopes.scene7.Scene7Services" invoke="getScene7DOMFXGs">
		<description>Get DOM FXGs</description>
	</service>

	<service name="extractScene7Params" engine="java" max-retry="0" transaction-timeout="1200" location="com.envelopes.scene7.Scene7Services" invoke="extractScene7Params">
		<description>Get parameters for scene7 templates like width, height and colors</description>
		<attribute name="scene7TemplateId" type="String" mode="IN" optional="true"/>
	</service>

	<service name="getScene7DefaultImages" engine="java" max-retry="0" transaction-timeout="300" location="com.envelopes.scene7.Scene7Services" invoke="getScene7DefaultImages">
		<description>Get default images to use in the online designer</description>
	</service>

	<service name="getTemplateProdAssoc" engine="java" max-retry="0" transaction-timeout="300" location="com.envelopes.scene7.Scene7Services" invoke="getTemplateProdAssoc">
		<description>Get the products that the designs were made for</description>
		<attribute name="scene7TemplateId" type="String" mode="IN" optional="true"/>
	</service>

	<service name="getTemplateBasePrices" engine="java" max-retry="0" transaction-timeout="300" location="com.envelopes.scene7.Scene7Services" invoke="getTemplateBasePrices">
			<description>Get the price for the templates based on the first product listed</description>
			<attribute name="scene7TemplateId" type="String" mode="IN" optional="true"/>
	</service>

	<service name="generateScene7Files" engine="java" max-retry="0" transaction-timeout="1200" location="com.envelopes.scene7.Scene7Services" invoke="generateScene7Files">
			<description>Get the price for the templates based on the first product listed</description>
			<attribute name="scene7DesignId" type="String" mode="IN" optional="false"/>
			<attribute name="orderId" type="String" mode="IN" optional="false"/>
			<attribute name="orderItemSeqId" type="String" mode="IN" optional="false"/>
			<attribute name="previewFiles" type="Boolean" mode="IN" optional="true"/>
			<attribute name="proofFile" type="Boolean" mode="IN" optional="true"/>
			<attribute name="printFiles" type="Boolean" mode="IN" optional="true"/>
			<attribute name="statusId" type="String" mode="IN" optional="true"/>
	</service>
</services>