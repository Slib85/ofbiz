<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
	<description>Merchant e-Solutions Services</description>
	<vendor>OFBiz</vendor>
	<version>1.0</version>

	<!-- Merchant e-Solutions Implementations -->
	<service name="amazonCCProcessor" engine="java" transaction-timeout="60" max-retry="0" location="com.envelopes.payments.amazon.AmazonPaymentServices" invoke="ccProcessor">
		<description>Amazon Payment Processing</description>
		<implements service="paymentProcessInterface"/>
		<attribute name="amazonPaymentMethod" type="org.apache.ofbiz.entity.GenericValue" mode="IN" optional="false"/>
	</service>

	<service name="amazonCCCapture" engine="java" transaction-timeout="300" max-retry="0" location="com.envelopes.payments.amazon.AmazonPaymentServices" invoke="ccCapture">
		<description>Amazon Payment Capture</description>
		<implements service="ccCaptureInterface"/>
	</service>

	<service name="amazonCCVoid" engine="java" transaction-timeout="60" max-retry="0" location="com.envelopes.payments.amazon.AmazonPaymentServices" invoke="ccVoid">
		<description>Amazon Payment Void</description>
		<implements service="paymentReleaseInterface"/>
	</service>

	<service name="amazonCCRefund" engine="java" transaction-timeout="60" max-retry="0" location="com.envelopes.payments.amazon.AmazonPaymentServices" invoke="ccRefund">
		<description>Amazon Payment Refund</description>
		<implements service="paymentRefundInterface"/>
	</service>

	<service name="amazonCCClose" engine="java" transaction-timeout="60" max-retry="0" location="com.envelopes.payments.amazon.AmazonPaymentServices" invoke="ccClose">
		<description>Amazon Payment Close</description>
		<attribute name="amazonPaymentMethod" type="org.apache.ofbiz.entity.GenericValue" mode="IN" optional="true"/>
		<attribute name="orderHeader" type="org.apache.ofbiz.entity.GenericValue" mode="IN" optional="true"/>
		<attribute name="amazonOrderId" type="String" mode="IN" optional="true"/>
		<attribute name="reason" type="String" mode="IN" optional="true"/>
	</service>
</services>