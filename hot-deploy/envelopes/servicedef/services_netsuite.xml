<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
	<description>Envelopes.com Services</description>
	<vendor>Envelopes.com</vendor>
	<version>1.0</version>

	<service name="getOrderTracking" engine="java" max-retry="0" location="com.envelopes.netsuite.NetsuiteServices" transaction-timeout="1200" invoke="getOrderTracking" auth="true">
		<description>Get all the recent shipped orders from Netsuite</description>
	</service>

	<service name="getProductInventory" engine="java" max-retry="0" location="com.envelopes.netsuite.NetsuiteServices" transaction-timeout="300" invoke="getProductInventory" auth="true">
		<description>Get the latest inventory for products from Netsuite</description>
	</service>

	<service name="exportCustomer" engine="java" max-retry="0" location="com.envelopes.netsuite.NetsuiteServices" transaction-timeout="2400" invoke="exportCustomer" auth="true">
		<description>Export order(s) to Netsuite</description>
		<attribute name="partyId" type="String" mode="IN" optional="false"/>
		<attribute name="orderId" type="String" mode="IN" optional="true"/>
		<attribute name="quoteId" type="String" mode="IN" optional="true"/>
		<attribute name="message" type="String" mode="OUT" optional="true" />
	</service>

	<service name="exportOrder" engine="java" max-retry="0" location="com.envelopes.netsuite.NetsuiteServices" transaction-timeout="2400" invoke="exportOrder" auth="true">
		<description>Export order(s) to Netsuite</description>
		<attribute name="orderIds" type="java.util.List" mode="IN" optional="false"/>
		<attribute name="ignoreValidity" type="Boolean" mode="IN" optional="true" />
		<attribute name="message" type="String" mode="OUT" optional="true" />
	</service>

	<service name="updateNetsuiteOrder" engine="java" max-retry="3" location="com.envelopes.netsuite.NetsuiteServices" transaction-timeout="1200" invoke="updateOrder" auth="true">
		<description>Update order(s) to Netsuite</description>
		<attribute name="orderId" type="String" mode="IN" optional="false"/>
		<attribute name="message" type="String" mode="OUT" optional="true" />
	</service>

	<service name="createPurchaseOrder" engine="java" max-retry="3" location="com.envelopes.netsuite.NetsuiteServices" transaction-timeout="1200" invoke="createPurchaseOrder" auth="true">
		<description>Create purchase order in Netsuite</description>
		<attribute name="orderId" type="String" mode="IN" optional="false"/>
		<attribute name="orderItemSeqId" type="String" mode="IN" optional="false" />
	</service>

	<service name="createItemFulfillment" engine="java" max-retry="3" location="com.envelopes.netsuite.NetsuiteServices" transaction-timeout="1200" invoke="createItemFulfillment" auth="true">
		<description>Create order item fulfillment in Netsuite</description>
		<attribute name="orderId" type="String" mode="IN" optional="false"/>
		<attribute name="orderItemSeqId" type="String" mode="IN" optional="false" />
		<attribute name="lineItem" type="String" mode="IN" optional="false" />
		<attribute name="trackingNumber" type="String" mode="IN" optional="false" />
		<attribute name="packageWeight" type="String" mode="IN" optional="false" />
		<attribute name="tranDate" type="String" mode="IN" optional="false" />
		<attribute name="deliveryDate" type="String" mode="IN" optional="true" />
		<attribute name="purchaseOrderId" type="String" mode="IN" optional="true" />
	</service>
</services>