			</actions>
			<widgets>
				<platform-specific><html><html-template location="component://envelopes/webapp/envelopes/template/open.ftl"/></html></platform-specific>
				<platform-specific><html><html-template location="component://envelopes/webapp/envelopes/template/emptyHeader.ftl"/></html></platform-specific>
				<decorator-section-include name="body"/>
				<platform-specific><html><html-template location="component://envelopes/webapp/envelopes/template/emptyFooter.ftl"/></html></platform-specific>
				<platform-specific><html><html-template location="component://envelopes/webapp/envelopes/template/close.ftl"/></html></platform-specific>
			</widgets>
		</section>
	</screen>

